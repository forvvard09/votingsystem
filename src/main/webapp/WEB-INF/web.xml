<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>VotingSystem</display-name>

    <servlet>
        <servlet-name>restaurantsServlet</servlet-name>
        <servlet-class>com.forvvard09.votingsystem.web.RestaurantsServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>restaurantsServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>usersServlet</servlet-name>
        <servlet-class>com.forvvard09.votingsystem.web.UsersServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>usersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restaurantForm</servlet-name>
        <servlet-class>com.forvvard09.votingsystem.web.RestaurantFormServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>restaurantForm</servlet-name>
        <url-pattern>/restaurantForm</url-pattern>
    </servlet-mapping>


</web-app>
